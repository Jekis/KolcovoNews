{

    "manifest_version": 2,
    "name": "Новости Кольцово",
    "version": "1.0",

    "description": "Показывает последние новости наукограда Кольцово.",

    "icons": {
        "16": "icons/kolcovo_logo_16_16.png",
        "48": "icons/kolcovo_logo_48_48.png"
    },

    "permissions": [
        "http://kolcovo.ru/*"
    ],

    "browser_action": {
        "default_icon": {
            "16": "icons/kolcovo_logo_16_16.png"
        },
        "default_popup": "popup/news.html",
        "default_title": "Новости Кольцово"
    }

}
